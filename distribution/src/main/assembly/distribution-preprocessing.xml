<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>preprocessing</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<outputDirectory>/lib</outputDirectory>
		</dependencySet>
	</dependencySets>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>cc.topicexplorer:core-common</include>
				<include>cc.topicexplorer:core-preprocessing</include>
				<include>cc.topicexplorer:core-initcorpus</include>
				<include>cc.topicexplorer:plugin-colortopic-preprocessing</include>
				<include>cc.topicexplorer:plugin-hierarchicaltopic-preprocessing</include>
				<include>cc.topicexplorer:plugin-prune-preprocessing</include>
				<include>cc.topicexplorer:plugin-category-preprocessing</include>
				<include>cc.topicexplorer:plugin-frame-preprocessing</include>
				<include>cc.topicexplorer:plugin-fulltext-preprocessing</include>
				<include>cc.topicexplorer:plugin-link-preprocessing</include>
				<include>cc.topicexplorer:plugin-text-preprocessing</include>
				<include>cc.topicexplorer:plugin-time-preprocessing</include>
<!-- 				<include>cc.topicexplorer:plugin-wiki-preprocessing</include> -->
				<include>cc.topicexplorer:plugin-wordtype-preprocessing</include>
				<include>cc.topicexplorer:plugin-mecab-initcorpus</include>
				<include>cc.topicexplorer:run-preprocessing</include>
				<include>cc.topicexplorer:run-initcorpus</include>
				<include>cc.topicexplorer:import-folder</include>
				<include>cc.topicexplorer:run-jobmanagement</include>
			</includes>
			<sources>
				<outputDirectoryMapping>/</outputDirectoryMapping>
				<excludeSubModuleDirectories>false</excludeSubModuleDirectories>
				<fileSets>
					<fileSet>
						<directory>local/main/resources</directory>
						<outputDirectory>/resources</outputDirectory>
					</fileSet>
					<fileSet>
						<directory>src/main/resources/scripts</directory>
						<outputDirectory>/scripts</outputDirectory>
					</fileSet>
					<fileSet>
						<directory>src/main/resources/bin</directory>
						<outputDirectory>/bin</outputDirectory>
					</fileSet>
					<fileSet>
						<directory>src/main/resources</directory>
						<outputDirectory>/etc</outputDirectory>
						<excludes>
							<exclude>**/*</exclude>
						</excludes>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>
</assembly>